<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="24sp"
        android:text="@string/item_offer_default_title"/>

    <TextView
        android:id="@+id/teaser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_marginTop="14sp"
        android:textSize="24sp"
        android:text="@string/item_offer_default_teaser"/>

    <ImageView
        android:id="@+id/thumbnail"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_below="@+id/teaser"
        android:layout_marginTop="20dp"
        android:src="@drawable/no_image"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/item_offer_default_thumbnail_desc"/>

    <TextView
        android:id="@+id/payout"
        android:layout_below="@+id/thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textSize="36sp"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/holo_green_dark"
        android:text="@string/item_offer_default_payout"/>
</RelativeLayout>